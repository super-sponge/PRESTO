<?xml-stylesheet type="text/xsl" href="configuration.xsl"?>
<configuration>
  <property>
    <name>node-scheduler.include-coordinator</name>
    <value>false</value>
    <description>
      是否运行work节点在coordinator上。对于大型集群，work在coordinator上会影响效率
    </description>
    <value-attributes>
      <type>value-list</type>
      <entries>
        <entry>
          <value>true</value>
          <label>Enabled</label>
        </entry>
        <entry>
          <value>false</value>
          <label>Disabled</label>
        </entry>
      </entries>
      <selection-cardinality>1</selection-cardinality>
    </value-attributes>
  </property>

  <property>
    <name>http-server.http.port</name>
    <value>8285</value>
    <description>
      指定Presto HTTP 端口
    </description>
  </property>

  <property>
    <name>query.max-memory</name>
    <value>10GB</value>
    <description>
      一条查询使用的最大内存
    </description>
    <value-attributes>
      <type>int</type>
      <minimum>0</minimum>
      <maximum>300</maximum>
      <increment-step>2</increment-step>
      <unit>GB</unit>
    </value-attributes>
  </property>

  <property>
    <name>query.max-memory-per-node</name>
    <value>1GB</value>
    <description>
      一条查询在每个节点上使用的内存
    </description>
    <value-attributes>
      <type>int</type>
      <minimum>0</minimum>
      <maximum>100</maximum>
      <increment-step>1</increment-step>
      <unit>GB</unit>
    </value-attributes>
  </property>

  <property require-input="true">
    <name>discovery.uri</name>
    <value></value>
    <description>
      presto 查询服务器地址
      例如：http://master.net:8285
    </description>
  </property>

<!-- TODO, figure out how to make this optional
  <property require-input="false">
    <name>query.queue-config-file</name>
    <value></value>
    <description>
        Specifies the file to read the queue configuration from. See
        https://prestodb.io/docs/current/admin/queue.html for more info in the
        file and the expected options.
    </description>
  </property>
-->

</configuration>
