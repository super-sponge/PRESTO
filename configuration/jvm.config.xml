<?xml-stylesheet type="text/xsl" href="configuration.xsl"?>
<configuration>
  <property>
    <name>jvm.config</name>
    <value>-server
-Xmx16G
-XX:+UseG1GC
-XX:+UseGCOverheadLimit
-XX:+ExplicitGCInvokesConcurrent
-XX:+HeapDumpOnOutOfMemoryError
-XX:OnOutOfMemoryError=kill -9 %p</value>
      <display-name>启动参数</display-name>
    <description>
        启动java虚拟机的参数列表，每个参数必须一行。
    </description>
  </property>
</configuration>
